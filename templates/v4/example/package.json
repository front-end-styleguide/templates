{
  "scripts": {
    "dev": "front-end-styleguide dev",
    "build": "front-end-styleguide build",
    "build:dev": "front-end-styleguide build:dev",
    "build:proto": "front-end-styleguide build:proto",
    "lint": "run-s -n lint:js lint:css lint:html",
    "lint:js": "eslint \"**/*.js\"",
    "lint:css": "stylelint \"**/*.?(s)css\" --syntax scss",
    "lint:html": "front-end-styleguide lint:html",
    "test": "run-s -n test:unit test:e2e",
    "test:unit": "nyc ava",
    "test:e2e": "testcafe chrome:headless,firefox:headless src/**/*.e2e.js --app \"front-end-styleguide dev\" --app-init-delay 4000"
  },
  "ava": {
    "verbose": true,
    "files": [
      "src/**/*.unit.js"
    ]
  },
  "nyc": {
    "all": true,
    "require": [
      "babel-register"
    ],
    "include": [
      "src"
    ],
    "exclude": [
      "src/main.js",
      "src/**/*.e2e.js",
      "src/**/*.unit.js"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html"
    ]
  },
  "dependencies": {
    "normalize.css": "^7.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "ava": "^0.25.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-ava": "^4.5.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-testcafe": "^0.2.1",
    "front-end-styleguide": "^4.5.4",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "stylelint": "^8.4.0",
    "stylelint-config-sass-guidelines": "^4.1.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^2.2.0",
    "testcafe": "^0.18.6"
  },
  "engines": {
    "node": ">= 8.6.0"
  }
}
