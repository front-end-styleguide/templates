<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {{#if (page "description")~}}<meta name="description" content="{{page 'description'}}">{{/if}}
    {{#if (page "title")}}<title>{{page "title"}}</title>{{/if}}

    <link rel="stylesheet" href="{{page 'rel'}}css/sg.css?v={{meta.version}}">
    <link rel="stylesheet" href="{{page 'rel'}}css/styles.css?v={{meta.version}}">
  </head>
  <body class="sg-background">

    {{> sg/nav}}

    <header class="sg-header">
      {{#if (page "title")}}<h1 class="sg-header__title">{{page "title"}}</h1>{{/if}}
      {{#if (page "description")}}<p class="sg-header__description">{{page "description"}}</p>{{/if}}
    </header>

    <main class="sg-body">
      {{{block "body"}}}
    </main>

    <script src="{{page 'rel'}}js/sg.js?v={{meta.version}}"></script>
    <script src="{{page 'rel'}}js/scripts.js?v={{meta.version}}"></script>
  </body>
</html>
